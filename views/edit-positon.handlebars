<main class="contenedor">
    <form action="/position/edit/{{position.url}}" class="default-form" method="POST">
        <h3>General Information</h3>

        <div class="campo">
            <label for="">Title</label>
            <input value='{{position.title}}'type="text" name="title" placeholder="ex: React Developer" required>
        </div>

        <div class="campo">
            <label for="">Company</label>
            <input value='{{position.company}}'type="text" name="company" placeholder="Company" required>
        </div>
        
        <div class="campo">
            <label for="">Location</label>
            <input value='{{position.location}}'type="text" name="location" placeholder="ex: New York or Remote" required>
        </div>
        

        <div class="campo">
            <label for="">Salary (USD)</label>
            <input value='{{position.salary}}'type="text" name="salary" placeholder="$75,000" required>
        </div>

        <div class="campo">
            <label >Contract</label>
            <select name="contract" >
                {{#contractType position.contract}}
                    <option value="" disabled selected>-- SELECT --</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Full-Time">Full-Time</option>
                    <option value="Part-Time">Part-Time</option>
                    <option value="Project">Project</option>
                {{/contractType}}
            </select>
        </div>

        <h3>Position Description</h3>
        <div class="campo descripcion">
            <label for="">Description</label>
            <input value='{{{position.description}}}'type="hidden" id="x" name="description">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Skills</h3>

        <ul class="lista-conocimientos">
            {{#selectSkills position.skills}}

            {{/selectSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id='skills'>
            <input type="submit" value='Save Changes' class="btn btn-azul">
        </div>
    </form>
</main>