<main class="contenedor">
    <form action="/edit-profile" method="post" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="">Name</label>
            <input value={{user.name}} type="text" name="name" placeholder="Your Name" required>
        </div>
        <div class="campo">
            <label for="">Email</label>
            <input value={{user.email}} type="email" name="email" placeholder="Your Email" required>
        </div>
        <div class="campo">
            <label for="">Password</label>
            <input type="password" name="password" placeholder="Your Password">
        </div>
        {{!-- <div class="campo">
            <label for="">Image</label>
            <input type="file" name='image' placeholder="Your Image" >
        </div> --}}
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Save" >

        </div>
    </form>
</main>